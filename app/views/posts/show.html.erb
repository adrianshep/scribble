<h1>Scribble</h1>
<h2><%= @post.title %> <a href="/posts/<%= @post.id %>/edit">(edit)</a></h2>

<p><%= @post.text %></p>

<h3>Comments <%= link_to "(new)", new_post_comment_path(@post) %></h3>
<ul>
  <% @post.comments.each do |comment| %>
    <li>
      <%= link_to "#{comment.title}:  #{comment.text}", post_comment_path(@post, comment) %>
    </li>

  <% end %>
</ul>
